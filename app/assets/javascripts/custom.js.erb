$("a[href='#top']").click(function() {
  $("html, body").animate({ scrollTop: 0 }, "slow");
  return false;
});

$(function(){
  if($('#showMe').length){
    $('.header-fake').show();
  }
});

$(window).scroll(function(){
  if (!$('#showMe').length){
    if($(window).scrollTop() >= 400) {
      $('.header-fake').fadeIn('fast');
    } else {
      $('.header-fake').fadeOut('fast');
    }
  }
});

$(".section-fade").hover(function() {
  $( '.faded', this).fadeTo("fast", 0.9);
  $(this).fadeTo('fast', 1.0);
}, function(){
  $( '.faded', this).fadeTo("fast", 0.8);
  $(this).fadeTo('fast', 0.6)
});

$(document).on('open', '[data-reveal]', function () {
  $('body').toggleClass("stop-scrolling")
  $('body').bind('touchmove', function(e){e.preventDefault()})
  $('.about-me-btn').toggleClass("close-reveal-modal")
});

$(document).on('close', '[data-reveal]', function () {
  $('body').toggleClass("stop-scrolling")
  $('body').unbind('touchmove')
  $('.about-me-btn').toggleClass("close-reveal-modal")
});

$('.about-me-btn').click(function(){
  $('#aboutModal').foundation('reveal', 'close');
})
